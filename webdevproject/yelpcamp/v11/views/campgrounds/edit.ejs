<%- include("../partials/header.ejs") %>

<div class="container">	
	<h1 style="text-align: center;">EDIT <%= campground.name %></h1>
	<div style="width: 30%; margin: 35px auto;">
		<form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
			<div class="form-group">
				<input class="form-control" type="text" placeholder="name" name="campground[name]">
			</div>
			<div class="form-group">
				<input class="form-control" type="text" placeholder="image url" name="campground[image]">
			</div>
			<div class="form-group">
				<input class="form-control" type="text" placeholder="description" name="campground[description]">
			</div>
			<div class="form-group">
				<button class="btn btn-lg btn-primary btn-block">new_campground</button>
			</div>
			
		</form>
		
		<a href="/campgrounds">go back</a>
	</div>
		
</div>


<%- include("../partials/footer.ejs") %>